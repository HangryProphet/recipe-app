        <item name="android:statusBarColor">#FFC107</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
    <style name="Theme.CookPal.Splash" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Use a background color or image -->
        <item name="android:windowBackground">@drawable/splash_full</item>
